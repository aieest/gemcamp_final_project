<section class="admin-home-page p-10 d-flex justify-content-evenly" style="height: 100vh; width: 100vw; padding: 10px;" >

  <content class="left-column m-0" style="width: 20vw; min-width: 20vw; height: 5vh; display: grid; grid-template-rows: 5vh 90vh;">
    <%= render partial: 'admin/partial/side_nav' %>
  </content>

  <content class="right-column m-0" style="width: 80vw; min-width: 80vw; height: 5vh; display: grid; grid-template-rows: 5vh 90vh; ">
    <div class="top-row d-flex justify-content-end align-items-center" style="border: 1px solid black; width: auto; height: 5vh;">
      <%= render partial: 'admin/partial/top_right_nav' %>
    </div>

    <div class="bottom-row" style="padding: 10px; border: 1px solid black; height: auto; width: 100%">
      <div class="p-4 w-100 mb-4">
        <div class="d-flex flex-row justify-content-between align-items-center">
          <div class="d-flex flex-row align-items-center">
            <span class="fs-3 fw-semibold"><%= @offer.name %></span>
            <%= link_to 'Back', admin_offers_path, class: "btn btn-primary me-2"%>
          </div>



        </div>

        <div class="w-100 border-bottom my-2"></div>

        <div class="d-flex flex-row justify-content-around container">
          <%= image_tag @offer.image.url, class: 'me-4', style: 'object-fit: cover; width: 300px; height: 300px;' if @offer.image.present? %>
          <div class="d-flex w-100 flex-column">
            <span>Amount: <%= @offer.amount %></span>
            <span>Coin: <%= @offer.coin %></span>
            <span>Status: <%= @offer.status.humanize %></span>

            <div class="d-flex flex-row align-items-center">
              <%= link_to 'Edit', edit_admin_offer_path(@offer), class: "btn btn-primary me-2" %>
              <%= button_to 'Delete', admin_offer_path(@offer), method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-danger" %>
            </div>
          </div>
        </div>

      </div>
    </div>
  </content>

</section>
