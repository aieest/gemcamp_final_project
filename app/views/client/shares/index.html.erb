<section class="client-shares-index" style="height: 70vh;">

  <div class="top-nav w-100" style="place-self: start">
    <%= render partial: 'client/partial/top_nav' %>
  </div>

  <div class="container mt-4 mb-5 d-flex flex-column justify-content-around" style="height: 75vh;">
    <%= render partial: 'client/partial/banner_image' %>

    <h1 style="margin-top: 50px;">Shares</h1>
    <% if @shares.present? %>
      <% @shares.each do |share| %>
        <div class="card flex-row w-100 align-items-center">
          <%= image_tag share.picture.url, class: 'rounded-start', style: 'object-fit: cover; width: 200px; height: 200px' if share.picture %>
          <div class="card-body d-flex flex-column justify-content-center">
            <% if share.user.username.present? %>
              <span class="fw-semibold"><%= share.user.username %></span>
            <% else %>
              <span class="fw-semibold"><%= share.user.email %></span>
            <% end %>
            <span><%= share.comment %></span>
          </div>
        </div>
      <% end %>
    <% else %>
      <h5 class="text-secondary">No Shares</h5>
    <% end %>
  </div>

  <div class="bottom-nav w-100 border d-flex justify-content-center" style="place-items: center">
    <%= render partial: 'client/partial/bottom_nav' %>
  </div>

</section>