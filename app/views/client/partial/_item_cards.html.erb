<div class="item-cards flex-column justify-content-center" style="width: 60vw; margin: auto;">
  <div class="item-cards d-flex justify-content-between" style="margin: auto;">

    <% @items.each do |item| %>

      <%= link_to client_lottery_path(item), class: 'card-sample d-grid border', style: 'text-align: center; width: 12vw; height: 20vh; place-items: center; position: relative; color: black;' do %>
        <%= image_tag item.image.url, style: 'object-fit: cover;', class: 'w-100 h-100', style: 'max-width: 100%; max-height: 70%; position: absolute; top: 0; left: 0;' if item.image.present? %>


        <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">
          <h3><%= item.name %></h3>
          <p>Quantity: <%= item.quantity %></p>
          <p><%= item.category_ids %></p>
        </div>
      <% end %>

    <% end %>
  </div>
</div>